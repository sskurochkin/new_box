+include-style('contacts')
+include-script('map')
+include-script('contacts')
.contacts
	.container
		.row
			.col-md-4
				.contacts-block
					.contacts-block__title Адрес офиса:
					.contacts-block__item
						+icon('i-location')(style="width:24px; height: 24px")
						span.contacts-block__descr г. Минск, просп. Победителей 106-11, пом. П-14
				.contacts-block
					.contacts-block__title График работы:
					.contacts-block__item
						+icon('i-timetable')(style="width:24px; height: 24px")
						span.contacts-block__descr Пн-Пт: 09:00 - 20:00, Сб-Вс: 10:00 - 19:00
				.contacts-block
					.contacts-block__title Телефоны:
					a(href='tel:23213').contacts-block__item
						+icon('i-phone')(style="width:24px; height: 24px")
						span.contacts-block__descr +375(17)336-40-44
					a(href='tel:23213').contacts-block__item
						+icon('i-a1')(style="width:24px; height: 24px")
						span.contacts-block__descr +375(44)500-74-74
					a(href='tel:23213').contacts-block__item
						+icon('i-mts')(style="width:24px; height: 24px")
						span.contacts-block__descr +375(29)801-74-74
					a(href='tel:23213').contacts-block__item
						+icon('i-life')(style="width:24px; height: 24px")
						span.contacts-block__descr +375(29)801-74-74
				.contacts-block
					.contacts-block__title E-mail:
					a(href='mailto:test@gmail.com').contacts-block__item
						+icon('i-mail')(style="width:24px; height: 24px")
						span.contacts-block__descr Faster@gmail.com
			.col-md-6.col-flex
				#map.map.js-map(data-geo="53.865122, 27.524273").preloader
		.row
			.col-10
				form.contacts-form.contacts-block
					.contacts-block__title Связаться с нами
					.row
						.col-md-5
							+input({
									label: 'Ваше имя',
									fg_mod: 'form-group--margin',
									type: 'text',
									name: false,
									small: false,
									placeholder: '',
									required: true,
									validation: {
										message: 'Заполните поле',
										regexp: 'Неверный формат',
										emailaddress: ' ',
										identical: false
									}
								})
							+input({
								label: 'Телефон',
								fg_mod: 'form-group--margin',
								type: 'tel',
								name: false,
								small: false,
								placeholder: '+375 (__) ___-__-__',
								required: true,
								pattern: 'phone',
								validation: {
									message: 'Заполните поле',
									regexp: 'Неверный формат',
									emailaddress: ' ',
									identical: false
								}
							})
							+input({
								fg_mod: 'form-group--margin',
								label: 'E-mail',
								name: false,
								small: false,
								placeholder: 'Введите Ваш е-mail',
								required: true,
								pattern: '[A-Za-zА-Яа-я0-9\_\-]{1,}@[A-Za-zА-Яа-я0-9\_\-]{1,}\.[A-Za-zА-Яа-я0-9]{2,}',
								validation: {
									message: 'Заполните поле',
									regexp: 'Неверный формат',
									emailaddress: ' ',
									identical: false
								}
							})
						.col-md-5
							+textarea({
								fg_mod: 'form-group--margin',
								label: 'Комментарий',
								required: true,
							})
					.contacts-form__submit
						button(type="submit").btn.btn--primary Отправить