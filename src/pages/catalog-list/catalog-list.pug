extends ../../layout/layout

block vars
	- var pageTitle = 'Каталог'
	- var pageBodyClass = ''
	- var dir = './'


block main
	.container
		+breadcrumb({
			content2 : 'Каталог',
			href_content2: true,
			content3: 'Спортивная обувь'
		})
		.row
			.col-lg-2
				include ../../components/catalog-side-menu/catalog-side-menu
			.col-lg-8
				+page-header-section({
					title: "Все категории",
					sidemenu: false
				})
				include ../../components/catalog-targets/catalog-targets
				include ../../components/catalog-sort/catalog-sort
				include ../../components/catalog-product-list/catalog-product-list


block componentsCriticalStyles
	+componentsCriticalStyles-includer()
block vendorScripts
	+vendorScripts-includer()
block componentsStyles
	+style-includer()

block componentsScripts
	+componentsScripts-includer()

block scripts
	script(src="./js/vendor/swiper.min.js" defer)