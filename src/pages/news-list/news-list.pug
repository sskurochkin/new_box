extends ../../layout/layout

block vars
	- var pageTitle = 'Новости'
	- var pageBodyClass = ''
	- var dir = './'


block main
	.container
		+breadcrumb({
			content2 : 'Новости'
		})
		+page-header-section({
			title: "Новости",
			sidemenu: false
		})
		include ../../components/news-list/news-list


block componentsCriticalStyles
	+componentsCriticalStyles-includer()
block vendorScripts
	+vendorScripts-includer()
block componentsStyles
	+style-includer()

block componentsScripts
	+componentsScripts-includer()

block scripts
	script(src="./js/vendor/swiper.min.js" defer)